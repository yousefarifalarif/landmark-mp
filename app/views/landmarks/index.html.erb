<div class="container">
  <div id="title">
    <h1>Landmarks</h1>
  </div>
  <div id="title" class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. Here are great landmarks for you:</p>
      <% else %>
        <p>All <%= Landmark.count %> landmarks</p>
      <% end %>
    </div>
  </div>

  <div class="cards">
    <%@landmarks.each do |landmark|%>
      <div data-aos="zoom-in" data-aos-duration="1000">
        <%= link_to landmark_path(landmark), class:"card-trip" do %>
          <div class="card-trip">
            <%= cl_image_tag landmark.photo.key %>
            <div class="card-trip-infos">
              <div>
                <h2><%= landmark.name %></h2>
                <p><%= landmark.location %></p>
              </div>
              <h3 class="card-trip-pricing"><%= humanized_money_with_symbol(landmark.price) %> / day</h2>
            </div>
          </div>
        <% end %>
      </div>
    <%end%>
  </div>
</div>
