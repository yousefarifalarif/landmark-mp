<%= cl_image_tag @landmark.photo.key, class:"landmark-banner"%>
<div class="container">
  <div class="layout">
    <div class="landmark-container">
      <div class="landmark-info">
        <h1><%= @landmark.name.capitalize %></h1>
        <div class="description"><%= @landmark.description.capitalize %></div>
        <div class="location"><%= @landmark.location.capitalize %></div>
        <div class="price-per-day" data-price-per-day="<%= @landmark.price_per_day %>"><strong>Â£<%=@landmark.price_per_day.to_i %> per day</strong></div>
        <div class="host-info">
          <p>Hosted by:</p>
          <div><%= cl_image_tag @landmark.user.photo.key, crop: :fill, class:"avatar-large"%></div>
          <div class="host_name"><%= @landmark.user.first_name %> <%= @landmark.user.last_name %></div>
        </div>
      </div>
      <div class="map-placeholder"></div>
    </div>
    <div class="booking-form">
      <h1>New Booking</h1>
      <div class="widget-content" data-unavailable="<%= @landmark.unavailable_dates.to_json %>">
        <%= render 'bookings/form', { landmark:@landmark, booking:@booking } %>
      </div>
    </div>
  </div>
</div>
