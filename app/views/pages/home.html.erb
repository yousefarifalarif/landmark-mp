<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://makcreates.com/wp-content/uploads/2018/03/london-landmarks-background-wallpaper-mak-creates-Website-image.jpg);">
  <div class="container">
    <h1>Rent A Landmark</h1>
    <p>Rent historic landmarks for special occasions</p>
    <br>
    <br>
    <div class="form-row">
      <div class="col-4">
        <%= form_tag landmarks_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for landmark or location"
          %>
      </div>
      <div class="form-row">
        <%= submit_tag "Search", class: "btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container py-4">
  <h2 class="pt-4 pb-4 pr-4">Our Newest Additions</h2>
  <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <%@landmarks.each_slice(3).with_index do |m, index|%>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="row mx-0">
            <% m.each do |l| %>
              <div class="col-4">
                <div class="card-trip">
                  <img src="https://source.unsplash.com/random" />
                  <div class="card-trip-infos">
                    <div>
                      <h4><%= l.name %></h4>
                      <p><strong><%= l.location %></strong></p>
                      <p>Â£<%= l.price_per_day.to_i %> / day</p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>

    <button class="carousel-control-prev" type="button" data-target="#carouselExampleInterval" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleInterval" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
</div>
