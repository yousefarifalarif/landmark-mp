<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.londonandpartners.com/asset/buckingham-palace_royal-collection-trust-her-majesty-queen-elizabeth-ii-2021-photo-andrew-holt_247a2afaed0312ad4e8fb6142fdcdd5a.jpg);">
  <div class="container">
    <h1>Rent A Landmark</h1>
    <p>Rent historic landmarks for special occasions</p>
    <br>
    <br>
    <div class="form-row">
      <div class="col-4">
        <%= form_tag landmarks_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for landmark or location"
          %>
      </div>
      <div class="form-row">
        <%= submit_tag "Search", class: "btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h2>Our Newest Additions</h2>

  <div class="card-deck">
    <% @landmarks.each do |l| %>
      <div class="card">
        <img src="assets/buckingham.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h4 class="card-title"><%= l.name %></h4>
          <p class="card-text"><%= l.location %></p>
          <p class="card-text"><%= l.price_per_day %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
