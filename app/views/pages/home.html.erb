<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://makcreates.com/wp-content/uploads/2018/03/london-landmarks-background-wallpaper-mak-creates-Website-image.jpg);">
  <div class="container">
    <h1>Rent A Landmark</h1>
    <p>Rent historic landmarks for special occasions</p>
    <br>
    <br>
    <div class="form-row">
      <div class="col-4">
        <%= form_tag landmarks_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for landmark or location"
          %>
      </div>
      <div class="form-row">
        <%= submit_tag "Search", class: "btn btn-secondary" %>
      <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container p-4">
  <h2 class="pt-4 pb-4 pr-4">Newest Landmarks</h2>
  <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <%@newest.each_slice(3).with_index do |m, index|%>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="row mx-0">
            <% m.each do |l| %>
              <div class="col-4">
                <div class="card-trip">
                  <%= cl_image_tag l.photo.key, crop: :fill %>
                  <div class="card-trip-infos">
                    <div>
                      <h2><%= link_to l.name, landmark_path(l) %></h2>
                      <p><%= l.location %></p>
                    </div>
                    <h3 class="card-trip-pricing">£<%= l.price_per_day.to_i %> / day</h3>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>

    <button class="carousel-control-prev" type="button" data-target="#carouselExampleInterval" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleInterval" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>


  <h2 class="pt-4 pb-4 pr-4">Hottest Landmarks</h2>
  <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <%@hottest.each_slice(3).with_index do |m, index|%>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="row mx-0">
            <% m.each do |l| %>
              <div class="col-4">
                <div class="card-trip">
                  <%= link_to landmark_path(l) do %>
                    <%= cl_image_tag l.photo.key, crop: :fill %>
                    <div class="card-trip-infos">
                      <div>
                        <h2><%= l.name %></h2>
                        <p><%= l.location %></p>
                      </div>
                      <h3 class="card-trip-pricing">£<%= l.price_per_day.to_i %> / day</h3>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>

    <button class="carousel-control-prev" type="button" data-target="#carouselExampleInterval" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleInterval" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
</div>
